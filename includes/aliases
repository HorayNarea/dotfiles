# For sudo-ing aliases
# https://wiki.archlinux.org/index.php/Sudo#Passing_aliases
alias sudo='sudo '


alias cp='cp -i'
alias mv='mv -i'

if command -v exa &> /dev/null; then
	alias exa='exa -F --group-directories-first --color=always --group'

	alias ls='exa'
	alias tree='exa -T'
else
	alias ls='\ls -bh -CF --group-directories-first --color'
	alias tree='tree -CF --dirsfirst'
fi

alias l='ls -l'
alias la='l -a'
alias lsa='ls -a'

alias less='less -FRX'
