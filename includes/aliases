# For sudo-ing aliases
# https://wiki.archlinux.org/index.php/Sudo#Passing_aliases
alias sudo='sudo '

# basic utils
alias rm='rm -I'
alias ls='\ls -bh -FC --group-directories-first --color=yes'
alias l='ls -l'
alias la='l -a'
alias lsa='ls -A'
alias less='less -FRX'
alias tree='tree -CF --dirsfirst'

# others
alias dig='drill'
alias su='sudo su'
