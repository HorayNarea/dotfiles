# For sudo-ing aliases
# https://wiki.archlinux.org/index.php/Sudo#Passing_aliases
alias sudo='sudo '

if ls --color -d . >/dev/null 2>&1; then
	LS_COLOR_FLAG='--color'
elif ls -G -d . >/dev/null 2>&1; then
	LS_COLOR_FLAG='-G'
fi

# basic utils
alias rm='rm -I'
alias ls='\ls -bh -FC --group-directories-first $LS_COLOR_FLAG'
alias l='ls -l'
alias la='l -a'
alias lsa='ls -A'
alias less='less -FRX'
alias tree='tree -CF --dirsfirst'

# others
alias dig='drill'
alias su='sudo su'
