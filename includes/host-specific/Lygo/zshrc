# debian specific
alias au='sudo apt-get update'
alias ag='sudo apt-get upgrade'
alias adg='sudo apt-get dist-upgrade'
alias agi='sudo apt-get install'
alias acs='apt-cache search'
alias acsh='apt-cache show'

# Syntax-highlight & pretty-print JSON strings or files
# Usage: `json '{"foo":42}'` or `echo '{"foo":42}' | json`
function json() {
	if [ -t 0 ]; then # argument
		python -mjson.tool <<< "$*" | pygmentize -l javascript;
	else # pipe
		python -mjson.tool | pygmentize -l javascript;
	fi;
}

function weggucken() {
	for item in $*; do
		vlc --rate 1.25 --scale 0.5 $item vlc://quit >/dev/null 2>/dev/null
		rm -i -v $item
	done
}

function goclone() {
	p=$(echo $1|sed -e 's,^git@,,' -e 's,^http://,,' -e 's,^https://,,' -e 's,.git$,,'|tr ":" "/")
	git clone $1 $p
}

export PATH="$HOME/bin:$PATH"

export PATH="$HOME/.linuxbrew/bin:$PATH"
export PATH="$HOME/.linuxbrew/sbin:$PATH"
export MANPATH="$HOME/.linuxbrew/share/man:$MANPATH"
export INFOPATH="$HOME/.linuxbrew/share/info:$INFOPATH"

export GOPATH=$HOME/projekte/gopath
export PATH=$GOPATH/bin:$PATH

export HOMEBREW_BUILD_FROM_SOURCE=1
